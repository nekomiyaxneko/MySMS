<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudentActivity">

    <EditText
        android:id="@+id/new_stu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="这里输入名字"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/delete_stu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="这里输入学号"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/new_stu_name"
        app:layout_constraintStart_toStartOf="@+id/new_stu_name"
        app:layout_constraintTop_toBottomOf="@+id/new_stu_name" />

    <EditText
        android:id="@+id/change_stu_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="这里输入成绩"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/delete_stu_id"
        app:layout_constraintStart_toStartOf="@+id/delete_stu_id"
        app:layout_constraintTop_toBottomOf="@+id/delete_stu_id" />

    <Button
        android:id="@+id/confirm_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/check_border"
        android:text="确定"
        android:textColor="@color/colorborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_stu_score" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="名字:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/new_stu_name"
        app:layout_constraintTop_toTopOf="@+id/new_stu_name" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="学号:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/delete_stu_id"
        app:layout_constraintTop_toTopOf="@+id/delete_stu_id" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="成绩:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/change_stu_score"
        app:layout_constraintTop_toTopOf="@+id/change_stu_score" />
</android.support.constraint.ConstraintLayout>